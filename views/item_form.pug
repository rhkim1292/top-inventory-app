extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(name='category')
        for category in categories
          if category.selected
            option(value=category._id, selected)=category.name
          else
            option(value=category._id)=category.name
    div.form-group
      label(for='priceInCents') Price in cents:
      input#priceInCents.form-control(type='number', placeholder='100' name='priceInCents' value=(undefined===item ? '' : item.priceInCents) required)
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='number', placeholder='10' name='quantity' value=(undefined===item ? '' : item.quantity) required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
